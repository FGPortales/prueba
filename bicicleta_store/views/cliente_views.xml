<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Vista Tipo Lista -->
    <record id="bicicletastore_cliente_view_tree" model="ir.ui.view"> <!--cargar datos a este modelo(es una tabla en base de datos)-->
        <field name="name">bicicletastore.cliente.view.tree</field> <!--nombre que va a tener este registro-->
        <field name="model">bicicletastore.cliente</field> <!--significa de que modelo vamos a sacar esta vista(este caso es del modelo: bicicletastore.cliente)-->
        <field name="arch" type="xml"> <!--arch es de la arquitectura/ tipo es XML-->
            <tree>
                <field name="name"/>
                <field name="direccion"/>
            </tree>
        </field>
    </record>
    <!-- Vista Tipo Formulario de Clientes -->
    <record id="bicicletastore_cliente_view_form" model="ir.ui.view"> <!--cargar datos a este modelo(es una tabla en base de datos)-->
        <field name="name">bicicletastore.cliente.view.form</field> <!--nombre que va a tener este registro-->
        <field name="model">bicicletastore.cliente</field> <!--significa de que modelo vamos a sacar esta vista(este caso es del modelo: bicicletastore.cliente)-->
        <field name="arch" type="xml"> <!--arch es de la arquitectura/ tipo es XML-->
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Nombre aqui"/>
                        </group>
                        <group>
                            <field name="direccion"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="bicicletastore_cliente_action" model="ir.actions.act_window">
        <field name="name">Clientes</field> <!--Label de la vista-->
        <field name="res_model">bicicletastore.cliente</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="bicicletastore_cliente_view_tree"/>
    </record>
    <menuitem id="cliente_menu" name="Cliente" action="bicicletastore_cliente_action" sequence="10" parent="persona_menu"/>
</odoo>